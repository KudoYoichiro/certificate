<h1>Listing operations</h1>

<table class="table table-bordered">
  <thead>
    <tr class="certificate_table_caption">
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @operations.each do |operation| %>
      <tr>
        <td><%= operation.name %></td>
        <td><%= link_to 'Show', operation, class: :crud_control %>
        	<%= link_to 'Edit', edit_operation_path(operation), class: :crud_control %>
        	<%= link_to 'Destroy', operation, method: :delete, data: { confirm: 'Are you sure?' }, class: :crud_control %>
        	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Operation', new_operation_path %>
