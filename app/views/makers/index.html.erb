<h1>Listing makers</h1>

<table class="table table-bordered">
  <thead>
    <tr class="certificate_table_caption">
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @makers.each do |maker| %>
      <tr>
        <td><%= maker.name %></td>
        <td><%= link_to 'Show', maker, class: :crud_control %>
        	<%= link_to 'Edit', edit_maker_path(maker), class: :crud_control %>
        	<%= link_to 'Destroy', maker, method: :delete, data: { confirm: 'Are you sure?' }, class: :crud_control %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Maker', new_maker_path %>
