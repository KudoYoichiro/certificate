<h1>Listing statuses</h1>

<table class="table table-bordered">
  <thead>
    <tr class="certificate_table_caption">
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= link_to 'Show', status, class: :crud_control %>
        	<%= link_to 'Edit', edit_status_path(status), class: :crud_control %>
        	<%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, class: :crud_control %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
