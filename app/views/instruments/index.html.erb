<h1>Listing instruments</h1>

<table class="table table-bordered">
  <thead>
    <tr class="certificate_table_caption">
      <th>Name</th>
      <th>Maker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td><%= instrument.name %></td>
        <td><%= instrument.maker.name %></td>
        <td><%= link_to 'Show', instrument, class: :crud_control %>
        	<%= link_to 'Edit', {action: :edit, id: instrument.id, maker_id: instrument.maker.id}, class: :crud_control %>
        	<%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' }, class: :crud_control %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instrument', new_instrument_path %>
